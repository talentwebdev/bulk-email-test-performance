{
  "compilerOptions": {
    "target": "es2018",                 /* Specify ECMAScript target version */
    "module": "commonjs",               /* Specify module system (e.g., 'commonjs', 'esnext') */
    "esModuleInterop": true,            /* Allow default imports from modules with no default export */
    "skipLibCheck": true,               /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true /* Enforce consistent casing in file names */
  },
  "include": ["*"]               /* Specify files to include in compilation */
}